{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"strict": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"stripInternal": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
